# ============================================
# GCP Configuration
# ============================================

# GCP Project ID (required)
GCP_PROJECT_ID=multimodal-medical-rag

# GCP Region for resources
GCP_REGION=us-central1

# GCP Zone (for Compute Engine resources)
GCP_ZONE=us-central1-a

# Environment: dev, test, or prod
ENVIRONMENT=dev

# ============================================
# Cloud Storage
# ============================================

# Bucket for raw medical data (images, documents)
GCS_RAW_DATA_BUCKET=${GCP_PROJECT_ID}-raw-data-${ENVIRONMENT}

# Bucket for processed data
GCS_PROCESSED_BUCKET=${GCP_PROJECT_ID}-processed-${ENVIRONMENT}

# Bucket for embeddings storage
GCS_EMBEDDINGS_BUCKET=${GCP_PROJECT_ID}-embeddings-${ENVIRONMENT}

# ============================================
# Vertex AI Configuration
# ============================================

# Text embedding model
VERTEX_TEXT_EMBEDDING_MODEL=text-embedding-004

# Multimodal embedding model (for images)
VERTEX_MULTIMODAL_EMBEDDING_MODEL=multimodalembedding@001

# LLM model for generation
VERTEX_LLM_MODEL=gemini-1.5-pro

# Vector Search Index endpoint (set after deployment)
VERTEX_VECTOR_SEARCH_INDEX_ENDPOINT=

# Vector Search deployed index ID
VERTEX_VECTOR_SEARCH_DEPLOYED_INDEX_ID=

# Embedding dimensions
EMBEDDING_DIMENSION=768

# ============================================
# BigQuery Configuration
# ============================================

# BigQuery dataset for metadata
BQ_DATASET=${GCP_PROJECT_ID}_metadata_${ENVIRONMENT}

# Table for document metadata
BQ_DOCUMENTS_TABLE=documents

# Table for query logs
BQ_QUERY_LOGS_TABLE=query_logs

# ============================================
# RAG Pipeline Settings
# ============================================

# Number of documents to retrieve
RAG_TOP_K=10

# Similarity threshold (0.0 - 1.0)
RAG_SIMILARITY_THRESHOLD=0.7

# Maximum context length for LLM
RAG_MAX_CONTEXT_LENGTH=8000

# Temperature for LLM generation
RAG_TEMPERATURE=0.2

# ============================================
# Data Ingestion Settings
# ============================================

# Batch size for processing
BATCH_SIZE=32

# Maximum concurrent uploads
MAX_CONCURRENT_UPLOADS=10

# Supported image formats
SUPPORTED_IMAGE_FORMATS=.jpg,.jpeg,.png,.dcm,.dicom

# Supported document formats
SUPPORTED_DOC_FORMATS=.pdf,.txt,.md,.json

# ============================================
# API Configuration
# ============================================

# API host and port
API_HOST=0.0.0.0
API_PORT=8080

# Enable debug mode (dev only)
DEBUG=false

# API rate limit (requests per minute)
RATE_LIMIT=100

# ============================================
# Logging & Monitoring
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable Cloud Logging
ENABLE_CLOUD_LOGGING=true

# Enable Cloud Trace
ENABLE_CLOUD_TRACE=true

# ============================================
# Security (DO NOT COMMIT ACTUAL VALUES)
# ============================================

# Service account key path (for local development)
GOOGLE_APPLICATION_CREDENTIALS=

# API keys (if needed for external services)
# API_KEY=
